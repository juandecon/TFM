tabs do
  tab 'Información' do
    h2 'Se exportarán los datos desde la base de datos de Moodle'
    h3 'El proceso de migración puede durar varios minutos'

    form action: admin_migrate_execute_path, method: :post do |f|
      f.input :authenticity_token, type: :hidden, name: :authenticity_token, value: form_authenticity_token
      f.input :submit, type: :submit, value: 'Ejecutar'
    end
  end
end